OPTION(CML_NO_ALIASES "Use math functions aliases" BOOL:FALSE)
IF(CML_NO_ALIASES)
	SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} -DCML_NO_ALIASES=\"${CML_NO_ALIASES}\"")
ELSE()
	MESSAGE(STATUS "Using math functions aliases")
ENDIF()

